@{
    ViewData["Title"] = "Edit ";
}

@model Dish


    <form action="/dish/@Model.DishId/update" method="post" class="form-group">
        <h1>Update Dish:</h1>
        <span class="text-danger" asp-validation-for="Chef"></span>
        <label asp-for="Chef"></label>
        <input class="form-control" asp-for="Chef">

        <span class="text-danger" asp-validation-for="Name"></span>
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name">
        
        <span class="text-danger" asp-validation-for="Calories"></span>
        <label asp-for="Calories"></label>
        <input class="form-control" asp-for="Calories">

        <span class="text-danger" asp-validation-for="Tastiness"></span>
        <label asp-for="Tastiness"></label>
        <select class="form-control" asp-for="Tastiness">
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
        </select>

        <span class="text-danger" asp-validation-for="Description"></span>
        <label asp-for="Description"></label>
        <textarea class="form-control" asp-for="Description"></textarea>

        <input value="Update Dish" type="submit">    
    </form>